<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_spinner"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

    </Spinner>

    <LinearLayout
        android:id="@+id/layout_cholesterol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout_spinner">

        <LinearLayout
            android:background="@drawable/bg_calendar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/test"
                android:textColor="#000000"
                android:gravity="center"
                android:rotation="-90"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-15dp"
                android:textSize="12sp"
                android:text="mg/dl"/>


            <com.jjoe64.graphview.GraphView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/graph"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_submit"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:padding="10dp"
                android:text="@string/add_value"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:text="Reset Values"
                android:padding="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hear_beat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout_spinner">

        <LinearLayout
            android:background="@drawable/bg_calendar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/test2"
                android:textColor="#000000"
                android:gravity="center"
                android:rotation="-90"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="-15dp"
                android:textSize="12sp"
                android:text="bpm"/>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/hgraph"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hlayout_submit"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/hsubmit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:padding="10dp"
                android:text="@string/add_value"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/hreset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:text="Reset Values"
                android:padding="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_blood_pressure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/layout_spinner">

        <LinearLayout
            android:background="@drawable/bg_calendar"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:id="@+id/test3"
                android:textColor="#000000"
                android:gravity="center"
                android:rotation="-90"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-20dp"
                android:textSize="12sp"
                android:text="mm Hg"/>

            <com.jjoe64.graphview.GraphView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/bgraph"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blayout_submit"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bsubmit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:layout_marginRight="60dp"
                android:padding="10dp"
                android:text="@string/add_values"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/breset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:text="Reset Values"
                android:padding="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_weight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_below="@id/layout_spinner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/weight_value"
                android:inputType="number"
                android:hint="@string/weight_kg"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/submit_button_bmi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="@string/add_value"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/set_bmi_text"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:text="@string/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_weight_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/imageViewdefault">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    app:srcCompat="@drawable/bmi_default" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/imageView1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/bmi_1" />

                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/imageView2">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/bmi_2"/>

                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/imageView3"
                    >


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/bmi_3"/>


                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/imageView4"
                   >


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/bmi_4"/>

                </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/imageView5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:srcCompat="@drawable/bmi_5"/>
                </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/show_weights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:background="@drawable/bg_button"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/view_last_records"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>







</RelativeLayout>